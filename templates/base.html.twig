<!DOCTYPE html>
<html lang="fr">
    {% block head%}
    <head>
        <meta charset="utf-8">
        <title>{% block title %}Zen Trading{% endblock %}</title>
        <meta name="description" content="Philippe Chamard développeur web création, refonte et optimisation de sites internet - Php Symfony Javascript Angular front-end back-end">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <meta property="og:title" content="Philippe Chamard développeur web dans les Yvelines en Ile-de-France" >
        <meta property="og:description" content="Création, refonte et optimisation de sites internet" >
        <meta property="og:type" content="website" >

        <link rel="icon" type="image/x-icon" href="#" >
        
        {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.2/css/all.css" integrity="sha384-/rXc/GQVaYpyDdyxK+ecHPVYJSN9bmVFBvjA/9eOB+pb3F2w2N6fc5qB9Ew5yIns" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,700" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Bowlby+One+SC" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Oswald:500" rel="stylesheet">
       
        <link href="{{ asset('main.css') }}" rel="stylesheet" />
        {% endblock stylesheets %}

    </head>
    {% endblock head %}
    <body>
        {% block body %}
            {% block header %}
            <div class="sidebar" id="sidebar">
                <div class="toggle"></div>
                <div class="col">
                    <p class="title_sidebar">School</p>
                    <p class="title_sidebar">Of</p>
                    <p class="title_sidebar">Trading</p>
                </div>
                <hr>
                <ul>
                    <li><a href="{{ path('home') }}#home">Accueil</a></li>
                    <li><a href="{{ path('about') }}#about">A propos</a></li>
                    <li><a href="{{ path('blog') }}">Go to School</a></li>
                    {% if app.user %}
                    <li><a href="{{ path('suscriber') }}">Mon profil</a></li>
                    {% endif %}
                    <li><a href="{{ path('section_formules') }}#section_formules">Formules d'abonnements</a></li>
                    {% if not app.user %}
                        <li><a href="{{ path('security_registration') }}">Inscription</a></li>
                    {% endif %}
                    {% if not app.user%}
                        <li><a href="{{ path('security_login') }}#login">Connexion</a></li>
                    {% else %}
                        <li><a href="{{ path('security_logout') }}#login">Déconnexion</a></li>
                    {% endif %}
                    <li><a href="{{ path('contact') }}#contact">Contact</a></li>
                </ul>
            </div>
            {% endblock header %}
        
        
        {% endblock %}
        {% block javascripts %}
            
            <script src="{{ asset('js/toggling.js') }}"></script>
        {% endblock %}
    </body>
</html>
